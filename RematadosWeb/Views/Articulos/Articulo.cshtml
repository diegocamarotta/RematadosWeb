@model RematadosWeb.Models.Articulo

@{
    ViewData["Title"] = "Articulo";
}

<h1>@Model.Nombre</h1>

<div>
    <h4>Articulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Imagen
        </dt>
        <dd class="col-sm-10">
                <img src="@Url.Content(String.Format("~/photos/" + Model.Id + ".jpg"))" onerror="this.src='/photos/sinimagen.jpg';" style="max-width:150px">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Comprar" class="btn normal" asp-route-id="@Model.Id">Comprar</a>
    <a asp-action="AñadirAlCarrito" class="btn normal" asp-route-id="@Model.Id">Añadir al carrito</a>
    <a asp-action="Index" class="btn normal">Volver al inicio</a>
</div>
