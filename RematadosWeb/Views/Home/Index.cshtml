@model RematadosWeb.Models.Usuario


@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center">
    <h1 class="display-4">Esto es Rematados!</h1>
    <h4>el portal nro 1 de subastas de latinoamerica</h4>
    <br />

            <section class="vh-100">
                <br />

                <br />

                <br />

                <br />

                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6 text-black">

                            <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                                @using (Html.BeginForm(FormMethod.Post, htmlAttributes: new { @class = "rem" }))
                                {

                                    <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Inicia sesión para comenzar!</h3>

                                    <div class="form-outline mb-4">
                                        <label class="form-label">Usuario: </label>
                                        @Html.EditorFor(model => model.Dni, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label">Contraseña: </label>
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
    
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button type="submit" class="btn btn-info btn-lg btn-block normal">Login</button>
   

                                    </div>
                                    <div class="form-group error">
                                        @if (Model != null)
                                        {

                                            <p>Usuario o contraseña incorrectos!!!</p>
                                        }


                                    </div>

           


                                    <p>No tenes todavía una cuenta? <a class="link-info" asp-area="" asp-controller="Usuarios" asp-action="Registro">Registrate</a></p>
                                }


                            </div>

                        </div>
                        <div class="col-sm-6 px-0 d-none d-sm-block">

                            <img src="~/images/venta-por-internet.jpg" class="w-75 vh-75" style="object-fit: cover; object-position: left;" alt="Inicio" />
                            <br />
                            <br />
                            <h5>Comprá, publicá, vendé, artículos de todas las categorias!</h5>


                        </div>
                    </div>
                </div>
</section>

