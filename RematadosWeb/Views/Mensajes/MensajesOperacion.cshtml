<table class="table" syle="">

    <tbody>
        @foreach (Mensaje mensaje in Model.Mensajes)
        {
            <tr>
                <td>
                    <div class="mensaje">@Html.DisplayFor(modelItem => mensaje.Texto)</div>
                    <div class="timestamp">Escrito por @Html.DisplayFor(modelItem => mensaje.Usuario.Nombres) - @Html.DisplayFor(modelItem => mensaje.Fechahora)</div>

                </td>

            </tr>
        }
    </tbody>

