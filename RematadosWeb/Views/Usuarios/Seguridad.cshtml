@model RematadosWeb.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}






<h1>Cambiar contraseña</h1>

<h4>Cambio de contraseña para la cuenta de @Model.Nombres</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="CambiarContraseña">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Dni" />
            <input type="hidden" asp-for="Nombres" />
            <input type="hidden" asp-for="Apellidos" />
            <input type="hidden" asp-for="Email" />

            <div class="form-group">
                <label asp-for="Password" class="control-label">Contraseña nueva</label>
                <input asp-for="Password" id="nuevaPWD" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

                <div class="form-group">
                    <input type="submit" value="Cambiar" class="btn btn-primary">
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
